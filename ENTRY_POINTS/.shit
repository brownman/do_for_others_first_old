rules(){
local cmd="cat $BASH_SOURCE | grep level | sed 's/#level://g'"
    local level=$( proxy "$cmd" )
    local count=0
    while [ "$count" -lt "$level" ];do
        echo " [ level ] $count "
        cat $BASH_SOURCE | grep "#level_${level}:" 

        done
    }

